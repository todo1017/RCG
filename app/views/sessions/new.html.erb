<h2>Log In</h2>

<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email], size: "30" %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password, size: "30" %>
    </div>
    <br>
    <div class="actions"><%= submit_tag "Log In", {:class=>"btn btn-success"} %></div>
<% end %>
