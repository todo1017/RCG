.row
  .col-md-1
  .col-md-8
    %p#notice
      = notice
    %br
    %br
    - if current_user
      - if current_user.owner_id != nil
        %b
          Your Buildings:
        %br
        - Building.where(owner_id: current_user.owner_id).where(competitor: false).each do |building|
          %br
          = building.name
          &nbsp;&nbsp;
          = link_to "-edit", edit_building_path(building.id)
          &nbsp;&nbsp;
          = link_to "-view rent roll", "/rent_roll/#{building.id}"
        %br
        %br
        = link_to "Add New Building", new_building_path
        %br
        %br
        %b
          Competitor Buildings:
        %br
        - Building.where(owner_id: current_user.owner_id).where(competitor: true).each do |building|
          %br
          = building.name
          = " (#{Geography.find(building.geography_id).name})" if building.geography_id != nil
          &nbsp;&nbsp;
          = link_to "-edit", edit_building_path(building.id)
          -#&nbsp;&nbsp;
          -#= link_to "-view rent roll", "/rent_roll/#{building.id}"
        %br
        %br
        -#= link_to "Add New Building", new_building_path
        -#%br
        -#%br
        %br
        %br
        %b
          New Users Requiring Approval to see your Buildings:
        %br
        %br
        %i
          Feature coming soon
        %br
        %br
        %br
        %br
        %b
          Ronan_Admin Only:
        %br
        %br
        = link_to "Owners", "/owners"
        %br
        = link_to "Geographies", "/geographies"
        %br
        %br
        = link_to "Concierge Values", "/amenity_concierges"
        %br
        = link_to "Ceiling Values", "/amenity_ceilings"
        %br
        = link_to "Patio Values", "/amenity_patios"
        %br
        %br
      - else
        Please request approval to see your buildings
      %br
      %br
      %br
      %br
      = link_to "Log Out", logout_path, {:class=>"btn btn-success"}
      &nbsp;&nbsp;
      = "#{current_user.email}"
      %br
      %br
      %br
    - else
      = link_to "Create Account", signup_path, {:class=>"btn btn-primary"}
      &nbsp;&nbsp;
      = link_to "Log In", login_path, {:class=>"btn btn-success"}
      %br
      %br
      %br
  .col-md-3
