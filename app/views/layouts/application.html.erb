<%# if current_user && current_user.owner != nil %>
    <%# application_name = current_user.owner.name + " Apartment App (powered by RCG)"  %>
<%# else %>
    <%# application_name = "RCG Apartment Application"  %>
<%# end %>
<% application_name = "Compsy, by Lygato"  %>

<!DOCTYPE html>
<html>
<head>
  <title><%= application_name %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>"><%= image_tag "lygato_logo_symbol.jpg", class: 'logo' %><span class="app-name"><%= application_name %></span>
      </a>
    </div>
    <%- if current_user && current_user.owner_id != nil %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Properties&nbsp;<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <%- Building.where(owner_id: current_user.owner_id).where(competitor: false).order(:name).each do |building| %>
                    <li><%= link_to building.name, edit_building_path(building.id) %></li>
                <%- end %>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Add New Property", new_building_path %></li>
                <li role="separator" class="divider"></li>
                <%- Building.where(owner_id: current_user.owner_id).where(competitor: true).order(:name).each do |building|  %>
                    <li><%= link_to building.name, edit_building_path(building.id) %></li>
                <%- end %>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Comparisons&nbsp;<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Market Comparison Report", "/comparisons" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "View Market Comparisons", "/comp_index" %></li>
                <li><%= link_to "Add Market Comparisons", "/comp_new" %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Rent Roll&nbsp;<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <%- Building.where(owner_id: current_user.owner_id).where(competitor: false).order(:name).each do |building|  %>
                    <li><%= link_to building.name, "/rent_roll/#{building.id}" %></li>
                <%- end %>
              </ul>
            </li>
            <li><a href="/building_fee_schedules">Fee Schedules</a></li>
            <li><a href="/building_amenities">Amenities</a></li>
          </ul>
        </div>
    <%- end %>
  </div>
</nav>



<div class="container-fluid">
<%= yield %>
</div>

</body>
</html>
