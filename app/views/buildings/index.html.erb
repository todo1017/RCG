<p id="notice"><%= notice %></p>

<h1>Listing Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Comp group</th>
      <th>Phone</th>
      <th>Manager</th>
      <th>Number of units</th>
      <th>Website</th>
      <th>Year built</th>
      <th>Year remodeled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.description %></td>
        <td><%= building.comp_group_id %></td>
        <td><%= building.phone %></td>
        <td><%= building.manager %></td>
        <td><%= building.number_of_units %></td>
        <td><%= building.website %></td>
        <td><%= building.year_built %></td>
        <td><%= building.year_remodeled %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

